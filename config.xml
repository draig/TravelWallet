<?xml version='1.0' encoding='utf-8'?>
<widget id="com.startupsoft.travelwallet" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="phonegap-version" value="cli-8.0.0" />
    <name>TravelWallet</name>
    <description>
        App for calculate complex debts between huge amount of people.
    </description>
    <author email="andrew.daskhevich@gmail.com" href="http://cordova.io">
        Andrei Dashkevich
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <!--<plugin name="cordova-plugin-contacts" spec="~3.0.0" />-->
    <plugin name="cordova-plugin-device" spec="~2.0.1" />
    <plugin name="cordova-plugin-file" spec="~6.0.0" />
    <!--<plugin name="cordova-plugin-file-transfer" spec="~1.6.1"/>-->
</widget>
