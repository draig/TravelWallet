<?xml version='1.0' encoding='utf-8'?>
<widget id="com.startupsoft.travelwallet" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>TravelWallet</name>
    <description>
        App for calculate complex debts between huge amount of people.
    </description>
    <author email="andrew.daskhevich@gmail.com" href="http://cordova.io">
        Andrei Dashkevich
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
